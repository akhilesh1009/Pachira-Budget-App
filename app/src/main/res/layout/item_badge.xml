<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:background="@color/white"
    android:backgroundTint="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Rarity Indicator -->
        <View
            android:id="@+id/viewRarityIndicator"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginBottom="12dp"
            android:background="@color/purple" />

        <!-- Badge Icon -->
        <ImageView
            android:id="@+id/ivBadgeIcon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_badge_default"
            android:layout_marginBottom="12dp" />

        <!-- Badge Name -->
        <TextView
            android:id="@+id/tvBadgeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Badge Name"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:gravity="center"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- Badge Description -->
        <TextView
            android:id="@+id/tvBadgeDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Badge description"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:gravity="center"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="4dp" />

        <!-- Rarity -->
        <TextView
            android:id="@+id/tvBadgeRarity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="COMMON"
            android:textSize="10sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="8dp" />

        <!-- Earned Date / Requirement -->
        <TextView
            android:id="@+id/tvEarnedDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Earned: 01 Jan 2024"
            android:textSize="10sp"
            android:textColor="@color/text_secondary"
            android:gravity="center"
            android:layout_marginTop="4dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
