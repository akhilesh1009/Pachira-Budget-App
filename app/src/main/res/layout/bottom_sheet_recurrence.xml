<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp"
        tools:ignore="UseCompoundDrawables">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/inter_semibold"
            android:text="Select Recurrence"
            android:textColor="@color/purple"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/btnClose"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="@string/Close"
            android:src="@drawable/ic_close"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            app:tint="@color/purple" />

    </LinearLayout>

    <RadioGroup
        android:id="@+id/radioGroupRecurrence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rbDaily"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:background="@null"
            android:buttonTint="@null"
            android:text="Daily"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:padding="8dp"
            android:buttonTintMode="multiply"
            android:theme="@null"
            android:gravity="start|center_vertical"
            android:drawableEnd="@drawable/custom_radio_button"
            android:drawablePadding="16dp" />

        <RadioButton
            android:id="@+id/rbWeekly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:background="@null"
            android:buttonTint="@null"
            android:text="Weekly"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:padding="8dp"
            android:buttonTintMode="multiply"
            android:theme="@null"
            android:gravity="start|center_vertical"
            android:drawableEnd="@drawable/custom_radio_button"
            android:drawablePadding="16dp" />

        <RadioButton
            android:id="@+id/rbBiweekly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:background="@null"
            android:buttonTint="@null"
            android:text="Biweekly"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:padding="8dp"
            android:buttonTintMode="multiply"
            android:theme="@null"
            android:gravity="start|center_vertical"
            android:drawableEnd="@drawable/custom_radio_button"
            android:drawablePadding="16dp" />

        <RadioButton
            android:id="@+id/rbMonthly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:background="@null"
            android:buttonTint="@null"
            android:text="Monthly"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:padding="8dp"
            android:buttonTintMode="multiply"
            android:theme="@null"
            android:checked="true"
            android:gravity="start|center_vertical"
            android:drawableEnd="@drawable/custom_radio_button"
            android:drawablePadding="16dp" />

        <RadioButton
            android:id="@+id/rbYearly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:background="@null"
            android:buttonTint="@null"
            android:text="Yearly"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:padding="8dp"
            android:buttonTintMode="multiply"
            android:theme="@null"
            android:gravity="start|center_vertical"
            android:drawableEnd="@drawable/custom_radio_button"
            android:drawablePadding="16dp" />

    </RadioGroup>

</LinearLayout>
