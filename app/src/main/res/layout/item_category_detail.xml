<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingVertical="12dp">

    <!-- Category Item -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="4dp">

        <!-- Category Icon Container -->
        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="12dp">

            <!-- Background Circle -->
            <View
                android:id="@+id/categoryColorIndicator"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/category_icon_background" />

            <!-- Category Icon -->
            <ImageView
                android:id="@+id/ivCategoryIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_category_default"
                app:tint="#6366F1" />

        </FrameLayout>

        <!-- Category Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Category Name -->
            <TextView
                android:id="@+id/tvCategoryName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food and Dining"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#1F2937"
                android:fontFamily="sans-serif-medium" />

            <!-- Transaction Count -->
            <TextView
                android:id="@+id/tvTransactionCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 transactions"
                android:textSize="12sp"
                android:textColor="#6B7280"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <!-- Amount and Percentage -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">

            <!-- Amount -->
            <TextView
                android:id="@+id/tvCategoryAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R 2,500"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#1F2937"
                android:fontFamily="sans-serif-medium" />

            <!-- Percentage -->
            <TextView
                android:id="@+id/tvCategoryPercentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25.5%"
                android:textSize="12sp"
                android:textColor="#6366F1"
                android:layout_marginTop="2dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F3F4F6"
        android:layout_marginTop="12dp" />

</LinearLayout>