<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingVertical="4dp">

    <!-- Color Indicator - Small colored square that matches pie slice -->
    <View
        android:id="@+id/legendColor"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginEnd="8dp"
        android:background="#6366F1" />

    <!-- Category Label - Name of the category -->
    <TextView
        android:id="@+id/legendLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Food"
        android:textSize="12sp"
        android:textColor="#374151"
        android:fontFamily="sans-serif" />

    <!-- Percentage - Shows what % of total this category represents -->
    <TextView
        android:id="@+id/legendPercentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25%"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="#6366F1"
        android:fontFamily="sans-serif-medium" />

</LinearLayout>