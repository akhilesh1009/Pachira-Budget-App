<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/widget_container"
    style="@style/Widget.Prog7313PoePachira.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.Prog7313PoePachira.AppWidgetContainer"
    android:background="@drawable/chart_background"
    android:clickable="true"
    android:focusable="true"
    android:padding="8dp">

    <!-- Header: Total Cash Flow + Month -->
    <TextView
        android:id="@+id/appwidget_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/appwidget_text"
        android:text="Total Cash Flow - June"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#333333"
        android:background="@drawable/header_background"
        android:padding="8dp" />

    <!-- Financial Summary -->
    <LinearLayout
        android:id="@+id/summary_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/appwidget_text"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:background="@drawable/summary_background"
        android:padding="8dp">

        <!-- Net Balance -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Net Balance"
                android:textSize="12sp"
                android:textColor="#757575" />

            <TextView
                android:id="@+id/tv_net_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R0.00"
                android:textSize="13sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/purple" />
        </LinearLayout>

        <!-- Income -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Income"
                android:textSize="12sp"
                android:textColor="#757575" />

            <TextView
                android:id="@+id/tv_income_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R0.00"
                android:textSize="13sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#4CAF50" />
        </LinearLayout>

        <!-- Expenses -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expenses"
                android:textSize="12sp"
                android:textColor="#757575" />

            <TextView
                android:id="@+id/tv_expense_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R0.00"
                android:textSize="13sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#F44336" />
        </LinearLayout>
    </LinearLayout>

    <!-- Chart Container -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/summary_container"
        android:background="@drawable/chart_background">

        <!-- Chart with fixed aspect ratio -->
        <ImageView
            android:id="@+id/widget_chart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:contentDescription="Monthly income vs expenses chart"
            android:scaleType="fitCenter"
            android:padding="8dp" />
    </FrameLayout>

</RelativeLayout>

