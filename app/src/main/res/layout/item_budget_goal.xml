<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header with Goal Name and Progress -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvGoalName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/inter_semibold"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="New Car" />

            <TextView
                android:id="@+id/tvProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semibold"
                android:textColor="@color/purple"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="75%" />
        </LinearLayout>

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginTop="8dp"
            android:progressDrawable="@drawable/progress_bar_gradient"
            tools:progress="75" />

        <!-- Amount Information -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvCurrentAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                tools:text="R 15,000.00" />

            <TextView
                android:id="@+id/tvTargetAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:fontFamily="@font/inter_light"
                android:textColor="#9E9E9E"
                android:textSize="16sp"
                tools:text="of R 20,000.00" />
        </LinearLayout>

        <!-- Category and Wallet Information -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Category Info -->
            <LinearLayout
                android:id="@+id/layoutCategoryInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:visibility="visible"
                tools:visibility="visible">

                <ImageView
                    android:id="@+id/ivCategoryIcon"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_default_icon"
                    app:tint="@color/purple" />

                <TextView
                    android:id="@+id/tvCategoryName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/inter"
                    android:textColor="#666666"
                    android:textSize="12sp"
                    tools:text="Food and Dining" />

            </LinearLayout>

            <!-- Wallet Info -->
            <LinearLayout
                android:id="@+id/layoutWalletInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="end|center_vertical"
                android:visibility="visible"
                tools:visibility="visible">

                <ImageView
                    android:id="@+id/ivWalletIcon"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_wallet_default"
                    app:tint="@color/purple" />

                <TextView
                    android:id="@+id/tvWalletName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/inter"
                    android:textColor="#666666"
                    android:textSize="12sp"
                    tools:text="Main Account" />

            </LinearLayout>

        </LinearLayout>

        <!-- Recurrence Information -->
        <LinearLayout
            android:id="@+id/layoutRecurrenceInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_schedule"
                app:tint="#999999" />

            <TextView
                android:id="@+id/tvRecurrence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/inter"
                android:textColor="#999999"
                android:textSize="11sp"
                tools:text="Monthly goal" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tvCreatedDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter"
                android:textColor="#999999"
                android:textSize="11sp"
                tools:text="Created: Jan 15, 2025" />

        </LinearLayout>

        <!-- Add Funds Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAddFunds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/btn_gradient"
            android:elevation="5dp"
            android:fontFamily="@font/inter_semibold"
            android:paddingVertical="8dp"
            android:text="@string/Add_Funds"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            app:backgroundTint="@null" />

    </LinearLayout>

</androidx.cardview.widget.CardView>