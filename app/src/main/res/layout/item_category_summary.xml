<!--                    app:tint="@android:color/white" />-->

<!--                <TextView-->
<!--                    android:id="@+id/tvCategoryInitial"-->
<!--                    android:layout_width="40dp"-->
<!--                    android:layout_height="40dp"-->
<!--                    android:layout_gravity="center"-->
<!--                    android:background="@drawable/bg_circle_color"-->
